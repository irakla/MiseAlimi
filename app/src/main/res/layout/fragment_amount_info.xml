<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/mainbottom"
                                             tools:context=".Amount_Info" android:id="@+id/frameLayout2">
    
    <Button
            android:background="@drawable/editstyle"
            android:textSize="22sp"
            android:text="분간"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonOutsideTime"
            app:layout_constraintStart_toStartOf="@+id/inspirationView"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/textView8" android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0.4"/>
    <TextView
            android:text="밖에서 마신 미세먼지는 "
            android:textSize="25sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintVertical_bias="0.419" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:textSize="25sp"
            android:textColor="@color/textred"
            android:text="(수치)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/inspirationView"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/buttonDetail"
            android:layout_marginTop="8dp" tools:layout_editor_absoluteX="158dp"/>
    <TextView
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:text="입니다."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8" app:layout_constraintStart_toEndOf="@+id/inspirationView"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/buttonDetail"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            
            android:background="@drawable/editstyle"
            android:textSize="22sp"
            android:text="자세히 보기"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonDetail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.076" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <Button
            android:background="@drawable/editstyle"
            android:textSize="22sp"
            android:text="측정 로그"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonLocationLog"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintVertical_bias="0.973" app:layout_constraintHorizontal_bias="0.922"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
</android.support.constraint.ConstraintLayout>